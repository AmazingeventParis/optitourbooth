# ===========================================
# OptiTour Booth - Variables d'environnement
# ===========================================
# Copiez ce fichier en .env et modifiez les valeurs

# ----- Base de données PostgreSQL -----
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=optitour
POSTGRES_USER=optitour_user
POSTGRES_PASSWORD=optitour_secret_2024

# URL de connexion complète (utilisée par Prisma)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?schema=public

# ----- Redis -----
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# ----- Backend -----
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# ----- JWT Authentication -----
JWT_SECRET=votre_secret_jwt_super_securise_a_changer_en_production_256_bits
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=votre_refresh_secret_different_du_premier
JWT_REFRESH_EXPIRES_IN=30d

# ----- OSRM (Routing) -----
# En développement, utiliser le serveur démo (limité)
# En production, utiliser votre instance self-hosted
OSRM_URL=https://router.project-osrm.org
# OSRM_URL=http://localhost:5000

# ----- Geocoding (Nominatim - gratuit, 1 req/sec) -----
NOMINATIM_URL=https://nominatim.openstreetmap.org

# ----- Trafic temps réel (optionnel) -----
# TomTom: 2500 requêtes/jour gratuites
# Créez un compte sur https://developer.tomtom.com/
TOMTOM_API_KEY=

# ----- Upload fichiers -----
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# ----- Frontend -----
VITE_API_URL=http://localhost:3000
VITE_SOCKET_URL=http://localhost:3000

# ----- CORS -----
CORS_ORIGIN=http://localhost:5173
