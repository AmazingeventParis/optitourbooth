# ============================================================
# OptiTour Booth — Variables d'environnement production
# cp .env.production.example .env
# ============================================================

# ---- Domaine ----
DOMAIN=optitourbooth.swipego.app

# ---- Base de données ----
POSTGRES_DB=optitour
POSTGRES_USER=optitour_user
DB_PASSWORD=CHANGEZ_MOI_PASSWORD_SECURISE

# ---- JWT Authentication ----
JWT_SECRET=CHANGEZ_MOI_SECRET_LONG_ET_ALEATOIRE_256_BITS
JWT_REFRESH_SECRET=CHANGEZ_MOI_REFRESH_SECRET_DIFFERENT_DU_PRECEDENT
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ---- Services tiers (optionnels mais recommandés) ----
# OpenRouteService — optimisation VROOM (gratuit, 1000 req/jour)
# https://openrouteservice.org/dev/#/signup
ORS_API_KEY=

# TomTom — trafic prédictif (gratuit, 2500 req/jour)
# https://developer.tomtom.com
TOMTOM_API_KEY=

# ---- Notifications push (Web Push / VAPID) ----
# Générer avec : npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# ---- Routing / Géocodage ----
OSRM_URL=https://router.project-osrm.org
NOMINATIM_URL=https://nominatim.openstreetmap.org

# ---- VROOM ----
VROOM_ENABLED=true

# ---- Upload ----
MAX_FILE_SIZE=10485760
